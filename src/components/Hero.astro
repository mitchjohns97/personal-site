---
/**
 * Hero.astro
 *
 * The main hero section on the homepage.
 * Content comes from src/content/site.ts
 */
import { siteConfig } from '../content/site';
---

<section class="py-24 md:py-32">
  <div class="container">
    <div class="max-w-3xl">
      <!-- Greeting -->
      <p class="text-accent font-medium mb-4 opacity-0 animate-fade-in-up">
        {siteConfig.hero.greeting}
      </p>

      <!-- Name/Headline -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 opacity-0 animate-fade-in-up delay-100">
        {siteConfig.hero.headline}
      </h1>

      <!-- Tagline -->
      <h2 class="text-2xl md:text-3xl text-text-secondary font-medium mb-8 opacity-0 animate-fade-in-up delay-200">
        {siteConfig.hero.tagline}
      </h2>

      <!-- Description -->
      <p class="text-lg text-text-secondary leading-relaxed mb-10 max-w-2xl opacity-0 animate-fade-in-up delay-300">
        {siteConfig.hero.description}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap gap-4 opacity-0 animate-fade-in-up delay-400">
        <a
          href="/projects"
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-white font-medium rounded-lg hover:bg-accent-hover transition-colors"
        >
          View My Work
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a
          href={`mailto:${siteConfig.social.email}`}
          class="inline-flex items-center gap-2 px-6 py-3 border border-border text-text-primary font-medium rounded-lg hover:bg-bg-secondary transition-colors"
        >
          Get In Touch
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Decorative element -->
<div class="absolute top-0 right-0 w-1/3 h-96 bg-gradient-to-bl from-accent-light/30 to-transparent -z-10 rounded-bl-full opacity-0 animate-fade-in delay-500" />
