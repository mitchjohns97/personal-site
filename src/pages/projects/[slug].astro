---
/**
 * projects/[slug].astro - Individual project page
 *
 * Renders markdown content from src/content/projects/
 * Each .md file becomes a page at /projects/[filename]
 */
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { siteConfig } from '../../content/site';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BaseLayout title={`${project.data.title} | ${siteConfig.name}`}>
  <article class="py-20">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <!-- Back Link -->
        <a
          href="/projects"
          class="inline-flex items-center gap-2 text-text-muted hover:text-accent mb-8 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Projects
        </a>

        <!-- Project Header -->
        <header class="mb-12">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{project.data.title}</h1>
          <p class="text-xl text-text-secondary mb-6">{project.data.description}</p>

          <!-- Tags -->
          {project.data.tags && (
            <div class="flex flex-wrap gap-2 mb-6">
              {project.data.tags.map((tag: string) => (
                <span class="text-sm px-3 py-1 bg-accent-light text-text-secondary rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          )}

          <!-- Links -->
          <div class="flex items-center gap-4">
            {project.data.github && (
              <a
                href={project.data.github}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-text-primary text-white rounded-lg hover:bg-text-secondary transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
                </svg>
                View Code
              </a>
            )}
            {project.data.live && (
              <a
                href={project.data.live}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-lg hover:bg-bg-secondary transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                Live Demo
              </a>
            )}
          </div>
        </header>

        <!-- Featured Image -->
        {project.data.image && (
          <img
            src={project.data.image}
            alt={project.data.title}
            class="w-full rounded-xl mb-12 border border-border"
          />
        )}

        <!-- Content -->
        <div class="prose">
          <Content />
        </div>
      </div>
    </div>
  </article>
</BaseLayout>
